<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="xabbuh_panda.transformer.factory.class">Xabbuh\PandaBundle\Services\TransformerFactory</parameter>
        <parameter key="xabbuh_panda.transformer.model.cloud.class">Xabbuh\PandaBundle\Transformers\CloudTransformer</parameter>
        <parameter key="xabbuh_panda.transformer.model.encoding.class">Xabbuh\PandaBundle\Transformers\EncodingTransformer</parameter>
        <parameter key="xabbuh_panda.transformer.model.notifications.class">Xabbuh\PandaBundle\Transformers\NotificationsTransformer</parameter>
        <parameter key="xabbuh_panda.transformer.model.profile.class">Xabbuh\PandaBundle\Transformers\ProfileTransformer</parameter>
        <parameter key="xabbuh_panda.transformer.model.video.class">Xabbuh\PandaBundle\Transformers\VideoTransformer</parameter>
    </parameters>
    <services>
        <service id="xabbuh_panda.transformer" class="%xabbuh_panda.transformer.factory.class%">
            <call method="registerTransformer">
                <argument type="string">Cloud</argument>
                <argument type="string">%xabbuh_panda.transformer.model.cloud.class%</argument>
            </call>
            <call method="registerTransformer">
                <argument type="string">Encoding</argument>
                <argument type="string">%xabbuh_panda.transformer.model.encoding.class%</argument>
            </call>
            <call method="registerTransformer">
                <argument type="string">Notifications</argument>
                <argument type="string">%xabbuh_panda.transformer.model.notifications.class%</argument>
            </call>
            <call method="registerTransformer">
                <argument type="string">Profile</argument>
                <argument type="string">%xabbuh_panda.transformer.model.profile.class%</argument>
            </call>
            <call method="registerTransformer">
                <argument type="string">Video</argument>
                <argument type="string">%xabbuh_panda.transformer.model.video.class%</argument>
            </call>
        </service>
    </services>
</container>
